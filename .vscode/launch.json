    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${cwd}", // this includes current dir in pythonpath
                "PYDEVD_WARN_EVALUATION_TIMEOUT":"500",
            }
        }
    ]
}